{
  "name": "coveragemap-action",
  "version": "1.0.0",
  "description": "GitHub Action that analyzes code coverage for files changed in a pull request and generates a visual treemap",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "package": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maxbirkner/coveragemap.git"
  },
  "keywords": [
    "github-action",
    "coverage",
    "lcov",
    "treemap",
    "testing"
  ],
  "author": "maxbirkner",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "ts-jest": "^29.2.3",
    "typescript": "^5.5.3"
  }
}
